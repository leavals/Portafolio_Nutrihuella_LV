generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"        // m√°s adelante cambiaremos a "sqlserver"
  url      = env("DATABASE_URL")
}

model User {
  id           String   @id @default(cuid())
  email        String   @unique
  passwordHash String?  // null si se crea por Google
  name         String?
  googleId     String?  @unique
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}
